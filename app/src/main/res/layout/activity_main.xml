<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="227dp"
        android:text="Welcome"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/manzilView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sabaqView"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rakatTitle"
        app:layout_constraintTop_toBottomOf="@+id/optStudent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/sabkiView"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/titleNafal"
        app:layout_constraintStart_toStartOf="@+id/sabaqView"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/manzilView"
        android:layout_width="222dp"
        android:layout_height="54dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="Manzil"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/selectDateLabel" />

    <TextView
        android:id="@+id/titleNafal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:text="Sabki :"
        app:layout_constraintEnd_toStartOf="@+id/sabkiView"
        app:layout_constraintTop_toBottomOf="@+id/sabaqView" />

    <TextView
        android:id="@+id/selectSalahLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Student"
        app:layout_constraintEnd_toStartOf="@+id/optStudent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optStudent" />

    <TextView
        android:id="@+id/rakatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:text="Sabaq :"
        app:layout_constraintEnd_toStartOf="@+id/sabaqView"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sabaqView" />

    <TextView
        android:id="@+id/selectDateLabel"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="Manzil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/manzilView" />

    <EditText
        android:id="@+id/optStudent"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnAddData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Show Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gitButton"
        android:layout_width="121dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="GitHub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDisplay" />


</androidx.constraintlayout.widget.ConstraintLayout>