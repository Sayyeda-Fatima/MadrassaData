<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="12dp"
        android:text="Welcome"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/optStudent"
        app:layout_constraintStart_toEndOf="@+id/selectSalahLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sabaqView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/sabkiView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rakatTitle"
        app:layout_constraintTop_toBottomOf="@+id/optStudent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/sabkiView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/manzilView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/titleNafal"
        app:layout_constraintTop_toBottomOf="@+id/sabaqView"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/manzilView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="Manzil"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/sabkiView" />

    <TextView
        android:id="@+id/titleNafal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="46dp"
        android:text="Sabki :"
        app:layout_constraintBottom_toTopOf="@+id/selectDateLabel"
        app:layout_constraintEnd_toStartOf="@+id/sabkiView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rakatTitle" />

    <TextView
        android:id="@+id/selectSalahLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="62dp"
        android:text="Select Student"
        app:layout_constraintBottom_toTopOf="@+id/rakatTitle"
        app:layout_constraintEnd_toStartOf="@+id/optStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rakatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="47dp"
        android:text="Sabaq :"
        app:layout_constraintBottom_toTopOf="@+id/titleNafal"
        app:layout_constraintEnd_toStartOf="@+id/sabaqView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSalahLabel" />

    <TextView
        android:id="@+id/selectDateLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="61dp"
        android:text="Manzil"
        app:layout_constraintBottom_toTopOf="@+id/btnAddData"
        app:layout_constraintEnd_toStartOf="@+id/manzilView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleNafal" />

    <EditText
        android:id="@+id/optStudent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toTopOf="@+id/sabaqView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selectSalahLabel"
        app:layout_constraintTop_toBottomOf="@+id/txtPersonName"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnAddData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="248dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectDateLabel" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="179dp"
        android:text="Show Data"
        app:layout_constraintBottom_toTopOf="@+id/gitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAddData"
        app:layout_constraintTop_toBottomOf="@+id/manzilView" />

    <Button
        android:id="@+id/gitButton"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="26dp"
        android:text="GitHub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDisplay" />


</androidx.constraintlayout.widget.ConstraintLayout>